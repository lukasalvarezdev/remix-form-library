{
	"name": "remix-form-library",
	"version": "0.0.4",
	"sideEffects": false,
	"browser": "./browser/index.js",
	"main": "./build/index.js",
	"license": "MIT",
	"scripts": {
		"test": "vitest",
		"test:watch": "vitest  --watch",
		"build": "npm run build:browser && npm run build:main",
		"build:browser": "tsc --project tsconfig.json --module ESNext --outDir ./browser",
		"build:main": "tsc --project tsconfig.json --module CommonJS --outDir ./build",
		"typecheck": "tsc --noEmit",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"peerDependencies": {
		"@remix-run/react": "^1.1.1",
		"react": "^18.0.0",
		"zod": "^3.11.6"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.7.2",
		"@remix-run/eslint-config": "^1.7.2",
		"@testing-library/dom": "^8.19.0",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@vitejs/plugin-react": "^2.1.0",
		"@vitest/coverage-c8": "^0.24.3",
		"eslint": "^8.23.1",
		"jsdom": "^20.0.1",
		"typescript": "^4.8.0",
		"vite": "^3.1.8",
